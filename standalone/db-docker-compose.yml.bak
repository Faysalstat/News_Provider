version: '3.8'

services:
    mysql:
        image: mysql:5.7
        hostname: mysql
        container_name: mysql
        restart: always
        environment:
          MYSQL_ROOT_PASSWORD: root
          MYSQL_USER: admin
          MYSQL_PASSWORD: admin
        ports:
          - "3306:3306"
        volumes:
          - mysql_data:/var/lib/mysql
          driver: local